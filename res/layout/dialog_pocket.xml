<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/sp_pocket_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_bank_newcategory"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/et_pocket_newcategory"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/et_pocket_newcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_pocket_amt"
        android:layout_below="@+id/sp_pocket_categories"
        android:ems="10"
        android:hint="New Category" />

    <EditText
        android:id="@+id/et_pocket_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_pocket_details"
        android:layout_alignLeft="@+id/et_pocket_details"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_pocket_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Details"
        android:inputType="textMultiLine" >
    </EditText>

</LinearLayout>